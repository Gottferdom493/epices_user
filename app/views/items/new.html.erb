<div class="container">
  <div class="row mt-5">

<h1>Ajout ton épice</h1>

      <%= form_for @item do |f| %>

				<%= f.label :nom_epice, "1 -" %>
				<%= f.text_field :nom_epice, placeholder: "Ajout le nom" %>

				<%= f.label :info, "2 -" %>
				<%=f.text_field :info, placeholder: "Ajout des informations" %>

				<%= f.label :prix, "3 -" %>
				<%=f.number_field :prix, placeholder: "Ajout ton prix" %>

				<%= f.label :img_url, "4 -" %>
				<%=f.text_field :img_url, placeholder: "URL de l'image" %>

				<%= f.submit :Création %>

			<% end %>

<%= link_to "Retour à la liste", items_path %>
    </div>
  </div>
</div>
